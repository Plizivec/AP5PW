<!-- SearchResults.cshtml -->
@model IList<Tip>

@{
    ViewData["Title"] = "Výsledky vyhledávání";
}

<h1 class="display-4">Search Results</h1>

@if (Model != null && Model.Count > 0)
{
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 justify-content-start">
                @for (int i = 0; i < Model.Count; ++i)
                {
                    <div class="col-md-3 mb-5">
                        <!-- Display your search results similar to the existing view -->
                        <!-- You can use an anchor tag to link to the tip details page -->
                        <div class="card h-100">
                            <img class="card-img-top" src="@Model[i].ImageSrc" alt="..." style="height: 200px;" />
                            <div class="text-center" style="background-color: #6C5F5B">
                                <h4 class="fw-bolder">
                                    <a asp-action="Details" asp-controller="Tip" asp-route-id="@Model[i].Id" style="color: #F2EAD3; text-decoration: none">@Model[i].Name</a>
                                </h4>
                            </div>
                            <div class="tip-text" style="background-color: #FFFAF7">
                                @Model[i].Text.Substring(0, Math.Min(50, Model[i].Text.Length))
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
else
{
    <p>No results found.</p>
}

<style>
    body {
        background-color: #F6F1EE;
    }

    .tip-text {
        font-weight: bold;
        font-size: 18px;
        padding-top: 10px;
        color: #6C5F5B; /* You can adjust the text color as needed */
    }
</style>
