<div>
    <h1>Tip Administration</h1>

    <div class="mb-3 d-flex justify-content-end">
        <a asp-area="Admin" asp-controller="RecipeAdmin" asp-action="Index" class="btn btn-primary me-2">Recepty</a>
        <a asp-area="Admin" asp-controller="MenuAdmin" asp-action="Index" class="btn btn-primary">Jídelníčky</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Tip Name</th>
                <th>Tip Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tip in Model)
            {
                <tr>
                    <td>@tip.Name</td>
                    <td>
                        @if (tip.Text.Length > 20)
                        {
                            <span title="@tip.Text">@tip.Text.Substring(0, 20)...</span>
                        }
                        else
                        {
                            @tip.Text
                        }
                    </td>
                    <td>
                        <a asp-area="Admin" asp-controller="TipAdmin" asp-action="Edit" asp-route-id="@tip.Id" class="btn btn-primary">Edit</a>
                        <form asp-area="Admin" asp-controller="TipAdmin" asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this tip?');">
                            <input type="hidden" name="id" value="@tip.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #F6F1EE;
    }
</style>