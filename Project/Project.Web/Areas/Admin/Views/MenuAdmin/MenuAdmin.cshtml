@model IList<Menu>

<div class="container mt-5">
    <h1>Administrace jídelníčků</h1>

    <div class="mb-3 d-flex justify-content-end">
        <a asp-area="Admin" asp-controller="RecipeAdmin" asp-action="Index" class="btn btn-primary me-2">Recepty</a>
        <a asp-area="Admin" asp-controller="TipAdmin" asp-action="Index" class="btn btn-primary">Tipy</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Název jídelníčku</th>
                <th>Popis</th>
                <th>Akce</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var menu in Model)
            {
                <tr>
                    <td>@menu.Name</td>
                    <td>@menu.Description</td>
                    <td>
                        <a asp-area="Admin" asp-controller="MenuAdmin" asp-action="Edit" asp-route-id="@menu.Id" class="btn btn-primary me-2">Edit</a>
                        <form asp-area="Admin" asp-controller="MenuAdmin" asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this menu?');">
                            <input type="hidden" name="id" value="@menu.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #F6F1EE;
    }
</style>